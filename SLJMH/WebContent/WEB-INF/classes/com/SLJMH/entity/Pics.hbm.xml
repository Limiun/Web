<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
	<!-- 建立类与表的映射 -->
	<class name="com.SLJMH.entity.Pics" table="pics">
		<id name="picId" column="picId">
			<generator class="identity"/>
		</id>
		<!-- 普通属性 -->
		<property name="picSourceUrl" column="picSourceUrl" type="string"/>
		<property name="picUrl" column="picUrl"     type="string"/>
		<property name="picInfo1" column="picInfo1" type="string"/>
		<property name="picInfo2" column="picInfo2" type="string"/>
		<property name="picInfo3" column="picInfo3" type="string"/>
	</class>
	

</hibernate-mapping>
