<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
	<!-- 建立类与表的映射 -->
	<class name="com.SLJMH.entity.Mood" table="mood">
		<id name="moodId" column="moodId">
			<generator class="identity"/>
		</id>
		<!-- 普通属性 -->
		<property name="moodTitle" column="moodTitle" type="string"/>
		<property name="moodDate" column="moodDate"/>
		<property name="moodContent" column="moodContent" type="text"/>
		<property name="mooduserName" column="mooduserName" type="string"/>
		<property name="moodAddfile" column="moodAddfile" type="string"/>
	</class>
	

</hibernate-mapping>
